/**
  * @brief This function handles USART2 global interrupt.
  */
void USART2_IRQHandler(void){
  /* USER CODE BEGIN USART2_IRQn 0 */

  /* USER CODE END USART2_IRQn 0 */
  HAL_UART_IRQHandler(&huart2);
  /* USER CODE BEGIN USART2_IRQn 1 */

  if (handled == 1){
    handled = 0;
    return;
  }
  char receivedCommand[sizeof(command)];
  strcpy(receivedCommand, command);
  if (state==LISTENING_STATE){
    char* token;

    int argc = 0;
    char** argv = malloc(5*sizeof(char*));

    const char delim[] = " ";
    // Storing the command name
    token = strtok(receivedCommand, delim);
    argv[argc] = token;
    argc++;
    
    // Storing the command parameters
    while(token!=NULL){
        token = strtok(NULL, delim);
        argv[argc] = token;
        argc++;
    }

    if (strcmp(argv[0],"move")==0){
      int distance = atoi(argv[1]);
      sendNPulse(distance, T_MOTOR);
      //translate(distance);
    }

    else if (strcmp(argv[0],"turn")==0){
      int angle = atoi(argv[1]);
      rotate(angle);
    }
  }
  

  handled = 1;
  HAL_UART_Receive_IT(&huart2, command, COMMAND_LENGTH);

  /* USER CODE END USART2_IRQn 1 */
}

/* USER CODE BEGIN 1 */

/* USER CODE END 1 */
